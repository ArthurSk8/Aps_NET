@model IEnumerable<SistemaCatalogo.Application.DTOs.ProdutoViewDTO>

@* Esta View Parcial contém apenas a tabela, permitindo o carregamento via AJAX (Requisito 7) *@

<table class="table table-striped table-bordered shadow-sm mt-3">
    <thead class="bg-primary text-white">
        <tr>
            <th>@Html.DisplayNameFor(model => model.Nome)</th>
            <th>@Html.DisplayNameFor(model => model.Preco)</th>
            <th>@Html.DisplayNameFor(model => model.Descricao)</th>
            @* NomeCategoria é o resultado do relacionamento 1:N *@
            <th>@Html.DisplayNameFor(model => model.NomeCategoria)</th> 
            <th>Ações</th>
        </tr>
    </thead>
    <tbody>
        @if (Model == null || !Model.Any())
        {
            <tr>
                <td colspan="5" class="text-center text-muted">Nenhum produto encontrado.</td>
            </tr>
        }
        else
        {
            @foreach (var item in Model)
            {
                <tr>
                    <td>@Html.DisplayFor(modelItem => item.Nome)</td>
                    <td>@item.Preco.ToString("C2")</td> @* Formatação de Moeda *@
                    <td>@Html.DisplayFor(modelItem => item.Descricao)</td>
                    <td>@Html.DisplayFor(modelItem => item.NomeCategoria)</td>
                    <td>
                        <a asp-action="Edit" asp-route-id="@item.Id" class="btn btn-sm btn-warning">Editar</a> |
                        <form asp-action="Delete" asp-route-id="@item.Id" method="post" onsubmit="return confirm('Tem certeza que deseja excluir este produto?');" style="display:inline;">
                            <input type="hidden" name="__RequestVerificationToken" value="@Html.AntiForgeryToken()" />
                            <button type="submit" class="btn btn-sm btn-danger">Excluir</button>
                        </form>
                    </td>
                </tr>
            }
        }
    </tbody>
</table>