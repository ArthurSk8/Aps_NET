@model SistemaCatalogo.Application.DTOs.CategoriaCreateUpdateDTO

@{
    ViewData["Title"] = "Criar Nova Categoria";
}

<div class="container mt-5">
    <h1 class="text-primary mb-4">Criar Nova Categoria</h1>

    <div class="row">
        <div class="col-md-6">
            <form asp-action="Create">
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                
                <div class="form-group mb-3">
                    <label asp-for="Nome" class="control-label"></label>
                    <input asp-for="Nome" class="form-control" />
                    <span asp-validation-for="Nome" class="text-danger"></span>
                </div>
                
                <div class="form-group">
                    <input type="submit" value="Criar" class="btn btn-success me-2" />
                    <a asp-action="Index" class="btn btn-secondary">Voltar para a Lista</a>
                </div>
            </form>
        </div>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}