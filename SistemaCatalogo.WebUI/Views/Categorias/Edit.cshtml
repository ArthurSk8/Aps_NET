@model SistemaCatalogo.Application.DTOs.CategoriaCreateUpdateDTO

@{
    ViewData["Title"] = "Editar Categoria";
}

<div class="container mt-5">
    <h1 class="text-primary mb-4">Editar Categoria</h1>

    <div class="row">
        <div class="col-md-6">
            <!-- O formulário precisa saber qual ID está sendo editado -->
            <form asp-action="Edit" asp-route-id="@ViewContext.RouteData.Values["id"]">
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                
                <div class="form-group mb-3">
                    <label asp-for="Nome" class="control-label"></label>
                    <input asp-for="Nome" class="form-control" />
                    <span asp-validation-for="Nome" class="text-danger"></span>
                </div>
                
                <div class="form-group">
                    <input type="submit" value="Salvar" class="btn btn-warning me-2" />
                    <a asp-action="Index" class="btn btn-secondary">Cancelar</a>
                </div>
            </form>
        </div>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}